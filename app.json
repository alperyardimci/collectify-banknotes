{
  "expo": {
    "name": "Collectify Banknotes",
    "slug": "collectify-banknotes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "collectify",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "backgroundColor": "#14161E",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#14161E"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to photograph your banknotes.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to select banknote photos."
      },
      "bundleIdentifier": "com.alperyardimci.collectifybanknotes",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#14161E"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-image-picker",
        {
          "cameraPermission": "We need camera access to photograph your banknotes.",
          "photosPermission": "We need photo library access to select banknote photos."
        }
      ]
    ]
  }
}
